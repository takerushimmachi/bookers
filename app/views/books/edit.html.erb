<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<%= render 'layouts/error', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book.id), class:"show_#{@book.id}" %>
<%= link_to 'Back', books_path %>